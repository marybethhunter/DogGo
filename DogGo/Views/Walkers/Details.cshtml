@model DogGo.Models.ViewModels.WalkerViewModel

@{
    ViewData["Title"] = "Details";
}
<div>
<div>
    <h4>Walker Profile</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Walker.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.NeighborhoodId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Walker.NeighborhoodId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.ImageUrl)
        </dt>
        <dd class = "col-sm-10">
            <img width="150" height="150" class="bg-info" src="@Model.Walker.ImageUrl" alt="avatar" />
        </dd>
    </dl>
</div>
  <div class="row">
    <section class="col-8 container mt-5">
      <h1 class="text-left">Recent Walks</h1>

      <div class="row">
        @foreach (Walks walk in Model.Walks) {
        <div class="card m-4" style="width: 18rem;">
          <div class="card-body">
            <div>
              <label class="font-weight-bold">Date:</label>
              <span>@walk.Date</span>
            </div>
            <div>
              <label class="font-weight-bold">ClientID:</label>
              <span>@walk.DogId</span>
            </div>
            <div>
              <label class="font-weight-bold">Duration:</label>
              <p>@walk.DurationInMin</p>
            </div>
          </div>
        </div>
        }
      </div>
    </section>
</div>

<div class="row">
    <section class="col-8 container mt-5">
      <h1 class="text-left">Total Walk Time:</h1>
            @foreach (Walks walk in Model.Walks)
            {
                <h2>@walk.DurationInMin</h2>
            }
        </section>
</div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Walker.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
</div>